<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/rlin_name"
        android:orientation="horizontal"
        android:layout_below="@id/lin_code"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="Name:"
            android:id="@+id/rtext_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical|end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rname"
            android:textSize="18sp"
            android:gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/rlin_price"
        android:orientation="horizontal"
        android:layout_below="@id/rlin_name"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="Price:"
            android:id="@+id/rtext_price"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical|end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rprice"
            android:textSize="18sp"
            android:gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/rlin_description"
        android:orientation="horizontal"
        android:layout_below="@id/rlin_price"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="Description:"
            android:id="@+id/rtext_description"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical|end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rdescription"
            android:textSize="18sp"
            android:gravity="left|center_vertical"/>
    </LinearLayout>

</RelativeLayout>
