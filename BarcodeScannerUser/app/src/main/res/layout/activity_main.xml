<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".Main">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:padding="7dp">

        <com.xgc1986.ripplebutton.widget.RippleButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:text="Scan Product"
            android:textSize="18sp"
            android:id="@+id/btn_scan"

            app:buttonColor="@color/primaryColorDark"
            app:rippleColor="@color/primaryColor"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:onClick="scanBarcode" />




        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_scan"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="100dp"
                android:layout_height="50dp"


                android:text="Barcode" />

            <TextView
                android:id="@+id/item_name_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Item Name:" />

            <TextView
                android:id="@+id/item_price_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Price:" />

            <TextView
                android:id="@+id/item_description_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Description:" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_scan"
            android:layout_toRightOf="@+id/leftLayout"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_code"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Code" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Name of item" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Price of item" />

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Description of item" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
