<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rlin_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rtext_brand"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="Brand:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rbrand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlin_type"
        android:layout_below="@+id/rlin_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rtext_type"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="Type:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rtype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlin_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlin_type"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rtext_price"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="Price:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlin_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlin_price"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rtext_description"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="Description:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rdescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
